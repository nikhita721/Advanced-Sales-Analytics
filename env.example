# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sales_analytics
DATABASE_URL_ASYNC=postgresql+asyncpg://user:password@localhost:5432/sales_analytics

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_TITLE=Sales Analytics API
API_VERSION=1.0.0
API_DESCRIPTION=Advanced sales analytics and insights platform

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# Analytics Configuration
RFM_SEGMENTS=5
FORECAST_PERIODS=30
MIN_PURCHASE_FREQUENCY=2

# Caching
CACHE_TTL=3600  # 1 hour

# Development
DEBUG=True
LOG_LEVEL=INFO
